
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/CustomerLayout/Index.cshtml";

}
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>@DateTime.Now.ToShortDateString() @DateTime.Now.ToShortTimeString() | Döviz Kurları</h3>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">
            <div class="col-md-12">
                <div class="">
                    <div class="x_content">
                        <div class="row">
                            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="tile-stats">
                                    <div class="icon">
                                        <i class="fa fa-sort-amount-desc"></i>
                                    </div>
                                    <div class="count">@ViewBag.USDtoTRY</div>

                                    <h3>USD -> TRY</h3>
                                    <p>Güncel Amerikan Doları - Türk Lirası kuru</p>
                                </div>
                            </div>
                            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="tile-stats">
                                    <div class="icon">
                                        <i class="fa fa-sort-amount-desc"></i>
                                    </div>
                                    <div class="count">@ViewBag.EURtoTRY</div>

                                    <h3>EUR -> TRY</h3>
                                    <p>Güncel Euro - Türk Lirası kuru</p>
                                </div>
                            </div>
                            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="tile-stats">
                                    <div class="icon">
                                        <i class="fa fa-sort-amount-desc"></i>
                                    </div>
                                    <div class="count">@ViewBag.GBPtoTRY</div>

                                    <h3>GBP -> TRY</h3>
                                    <p>Güncel İngiliz Sterlini - Türk Lirası kuru</p>
                                </div>
                            </div>
                            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="tile-stats">
                                    <div class="icon">
                                        <i class="fa fa-sort-amount-desc"></i>
                                    </div>
                                    <div class="count">@ViewBag.USDtoEUR</div>

                                    <h3>USD -> EUR</h3>
                                    <p>Güncel Amerikan Doları - Euro kuru</p>
                                </div>
                            </div>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>
